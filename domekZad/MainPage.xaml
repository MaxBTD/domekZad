<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="domekZad.MainPage">

    <ScrollView>
        <VerticalStackLayout Margin="0,20,0,0">
            <Label Text="Domek w górach"
                   TextColor="Gray"
                   FontSize="30"
                   />
            <Image Source="gory.png"/>
            <Grid ColumnDefinitions="*, *, *">
                <Button Text="POLUB" Clicked="onLikeClicked" CornerRadius="0" Grid.Column="0" BackgroundColor="#008080"/>
                <Button Text="USUŃ" Clicked="onDislikeClicked" CornerRadius="0" Grid.Column="1" BackgroundColor="#008080"/>
                <Button Text="ZAPISZ" CornerRadius="0" Grid.Column="2" BackgroundColor="#008080"/>
            </Grid>
            <Label Text="0 Polubień" HorizontalTextAlignment="End" TextColor="Gray" x:Name="lblLike" Margin="0,5,0,5"/>
            <Line  HeightRequest="25" X1="-100" X2="2000" Y1="0" Y2="0" Stroke="Gray" StrokeThickness="5"/>
            <Label Text="Opis" TextColor="Gray" FontAttributes="Bold" FontSize="20"/>
            <Label Text="Odwiedź komfortowy domek w Sudetach, blisko do szlaków turystycznych" TextColor="Gray"/>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
